{
  "expo": {
    "name": "ChemFetch Mobile (Testing)",
    "slug": "chemfetch-mobile",
    "version": "1.1.1-beta",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "chemfetchmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chemfetch.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan barcodes and capture product photos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "proguardVersion": "6.2.2",
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.CAMERA"],
      "package": "com.chemfetch.mobile",
      "versionCode": 3
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-camera",
      "expo-web-browser"
    ],
    "experiments": { "typedRoutes": true },
    "extra": {
      "router": {},
      "eas": { "projectId": "add1a4f4-ed11-463e-a137-423538bdcfe5" }
    },
    "updates": { "enabled": false, "fallbackToCacheTimeout": 0 }
  }
}
